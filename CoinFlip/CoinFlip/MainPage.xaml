<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoinFlip.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label x:Name="CaraCoroa"
                   FontSize="50"
                   HorizontalTextAlignment="Center"></Label>
            <Picker x:Name="Escolha" Title="Cara ou Coroa?">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Cara</x:String>
                        <x:String>Coroa</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button Clicked="GirarMoeda" Text="Girar Moeda"></Button>
            <Label x:Name="ApostaCerta"
                   FontSize="30"
                   HorizontalTextAlignment="Center"></Label>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
